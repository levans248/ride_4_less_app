<!DOCTYPE html>
<html>
<head>
  <title>Ride4LessApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Ride 4 Less
                    </a>
                </li>
            </ul>
            <div id="uber-login">
                <%= form_tag '/analytics', method: :post do %>
                    <div>
                        <p><%= label_tag :username, "Uber Login ID:" %></p>
                        <p class="credentials"><%= text_field_tag :username %></p>
                    </div>
                    <div>
                        <p><%= label_tag :password, "Uber Password:" %></p>
                        <p class="credentials"><%= text_field_tag :password %></p>
                    </div>
                    <div>
                        <p><%= submit_tag "Submit", :class=>"submit"%></p>
                    </div>
                <% end %>
            </div>
            <ul class="sidebar-nav links">
                <li>
                    <a href="#">Dashboard</a>
                </li>
                <li>
                    <a href="#">Shortcuts</a>
                </li>
                <li>
                    <a href="#">Overview</a>
                </li>
                <li>
                    <a href="#">Events</a>
                </li>
                <li>
                    <a href="#">About</a>
                </li>
                <li>
                    <a href="#">Services</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                        <%= yield %>
                    </div>
                </div>
                <div id="footer">
                    <footer>
                        <p>Webpage created by Luke Evans, luevans248@gmail.com</p>
                    </footer>
                 </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>


</body>

</html>
